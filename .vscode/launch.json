{
  "version": "0.2.0",
  "configurations": [
    {
    "name": "FastAPI: Run Backend (from root)",
    "type": "debugpy",
    "request": "launch",
    "module": "uvicorn",
    "args": ["app.backend.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
    "cwd": "${workspaceFolder}",
    "envFile": "${workspaceFolder}/.env",
    "console": "integratedTerminal",
    "justMyCode": true
    },
    {
      "name": "FastAPI: Debug (no reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.backend.main:app",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}/app/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: Run Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "tests"
      ],
      "cwd": "${workspaceFolder}/app/backend",
      "console": "integratedTerminal"
    },
    {
      "name": "Streamlit: Run Frontend",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "streamlit_app.py"
      ],
      "cwd": "${workspaceFolder}/app/frontend",
      "console": "integratedTerminal"
    }
  ]  
}